{
	"compilerOptions": {
		"outDir": "./js",
		"isolatedModules": true,
		"allowJs": true,
		"target": "es2017",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@/*": [
				"./"
			]
		}
	},
	"include": ["./src/*", "./custom.d.ts"],
}